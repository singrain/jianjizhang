/* pages/mbook/addwater.wxss */
@import "/svgs.wxss";

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.iconfont {
  font-size: 30px !important;
}

.nav {
  width: 150px;
  height: 32px;
  margin: 0 auto;
  border: 1px solid #f6c142;
  border-radius: 3px;
  font-size: 14px;
  color: #f6c142;
}

.nav-item {
  float: left;
  width: 50%;
  line-height: 32px;
  text-align: center;
}

.nav-item:nth-child(0) {
  border-right: 1px solid #f6c142;
}

.nav-active {
  background-color: #f6c142;
  color: #fff;
}

.jz-box {
  clear: both;
  height: 45px;
  line-height: 45px;
  border-bottom: 1px solid #f2f2f2;
  padding: 20px 0 10px;
}

.jz-title {
  float: left;
  margin-left: 20px;
}

.jz-t-img {
  width: 45px;
  height: 45px;
  line-height: 45px;
  border-radius: 50px;
  background-color: #f6c142;
  text-align: center;
  color: #fff;
  float: left;
}

.jz-t-text {
  font-size: 16px;
  margin-left: 10px;
}

.jz-input-box {
  float: right;
  margin-right: 20px;
}

.jz-input {
  text-align: right;
  height: 45px;
  line-height: 45px;
  color: #444;
}

.jz-item {
  width: 100%;
  height: 300px;
  clear: both;
}

.jz-item-img {
  /* background-color: #444; */
  width: 20%;
  height: 80px;
  text-align: center;
  float: left;
  margin-top: 15px;
}

.jz-item-img:hover .jz-imgs {
  background-color: #f6c142;
  color: #fff;
}

.tag-action {
  background-color: #f6c142 !important;
  color: #fff !important;
}

.jz-imgs {
  width: 50px;
  height: 50px;
  line-height: 50px;
  margin: 0 auto;
  border-radius: 50px;
  text-align: center;
  margin-bottom: 5px;
  background-color: #f6f6f6;
  color: #6d6d6d;
}

.jz-tag {
  width: 100%;
  font-size: 14px;
  color: #6d6d6d;
}

.jz-gj {
  padding: 0 20px;
  line-height: 40px;
  height: 40px;
}

.rili {
  float: left;
}

.rili-box {
  color: #6d6d6d;
}

.rili-box image {
  width: 30px;
  height: 30px;
}

.remark {
  float: right;
}

.remark input {
  text-align: right;
  line-height: 40px;
  width: 200px;
  height: 40px;
}

.btnbox {
  clear: both;
  margin-top: 20px;
}

.btnitem1 {
  width: 50%;
  text-align: center;
  float: left;
}

.btnitem2 {
  width: 50%;
  text-align: center;
  float: left;
}

.btnsive {
  border-radius: 4px;
  width: 150px;
  margin: 0 auto;
}

.btnitem1 .btnsive {
  /* border: 1px solid #f6c142; */
  background-color: #fff;
  color: #f6c142;
  height: 40px;
  line-height: 40px;
}

.btnitem1 .btnsive::after{  
  border:1px solid #f6c142;  
}  

.btnitem2 .btnsive {
  background-color: #f6c142;
  color: #fff;
  height: 42px;
  line-height: 42px;
}

.btnitem2 .btnsive::after{  
  border: none; 
}  
