

.carditem {
  width: 100%;
  height: 120px;
  border-radius: 5px;
  margin: 10px 0;
}

.carditem:nth-child(5n+1) {
  background-color: rgba(0, 150, 136, 0.8);
}

.carditem:nth-child(5n+2) {
  background-color: rgba(95, 184, 120, 0.8);
}

.carditem:nth-child(5n+3) {
  background-color: rgba(30, 159, 255, 0.8);
}

.carditem:nth-child(5n+4) {
  background-color: rgba(255, 184, 0, 0.8);
}

.carditem:nth-child(5n+5) {
  background-color: rgba(255, 87, 34, 0.8);
}

.carditem .top {
  height: 70px;
  padding: 10px 10px 5px;
}

.carditem .top .t-left {
  float: left;
  width: 40px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  background-color: #fff;
  border-radius: 50px;
  color: #444;
  font-size: 20px;
}

.carditem .top .t-right {
  float: left;
  font-size: 12px;
  color: #fff;
  margin-left: 10px;
}

.c-name {
  font-size: 16px;
  margin-bottom: 4px;
}

.t-r-item {
  margin-right: 5px;
}

.t-r-i-z {
  color: #fff;
}

.carditem .down {
  height: 35px;
  line-height: 35px;
  font-size: 14px;
  background-color: rgba(0, 0, 0, 0.2);
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
}

.d-item {
  float: left;
  width: 33%;
  text-align: center;
  color: #fff;
}

